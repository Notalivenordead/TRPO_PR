<Window x:Name="PaymentWindow" x:Class="_222_Busin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_222_Busin"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Объявление строк-->
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Объявление столбцов-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="BackButton" Content="Назад" Grid.Column="0" Margin="5,5,5,5" Click="BackButton_Click"/>
        <ToggleButton x:Name="ThemeToggle" Grid.Column="2" 
                  Content="Тёмная тема" Click="ThemeToggle_Click" Margin="5,5,5,5"/>
        <Button x:Name="ExitButton" Content="Закрыть" Grid.Column="3" Click="ExitButton_Click" Margin="5,5,5,5"/>
        <Frame x:Name="MainFrame" Grid.Row="1" Grid.ColumnSpan="4" NavigationUIVisibility="Hidden"/>
        <TextBlock x:Name="DateTimeNow" Grid.Row="2" Grid.ColumnSpan="4" 
               HorizontalAlignment="Right" VerticalAlignment="Center" 
               Margin="0,0,10,0"/>
    </Grid>
</Window>
