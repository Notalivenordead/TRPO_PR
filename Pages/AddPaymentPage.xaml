<Page x:Class="_222_Busin.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Busin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление платежа">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Пользователь:" Margin="5" VerticalAlignment="Center"/>
        <ComboBox x:Name="CBUser" Grid.Row="0" Grid.Column="1" Margin="5"
                  DisplayMemberPath="FIO" SelectedValuePath="ID"
                  SelectedValue="{Binding UserID}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Категория:" Margin="5" VerticalAlignment="Center"/>
        <ComboBox x:Name="CBCategory" Grid.Row="1" Grid.Column="1" Margin="5"
                  DisplayMemberPath="Name" SelectedValuePath="ID"
                  SelectedValue="{Binding CategoryID}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Название:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="TBPaymentName" Grid.Row="2" Grid.Column="1" Margin="5"
                 Text="{Binding Name}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата:" Margin="5" VerticalAlignment="Center"/>
        <DatePicker x:Name="DPDate" Grid.Row="3" Grid.Column="1" Margin="5"
                    SelectedDate="{Binding Date}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Количество:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="TBCount" Grid.Row="4" Grid.Column="1" Margin="5"
                 Text="{Binding Num}"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Цена:" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="TBPrice" Grid.Row="5" Grid.Column="1" Margin="5"
                 Text="{Binding Price}"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button Content="Сохранить" Click="ButtonSave_Click" Margin="5" Width="100"/>
            <Button Content="Очистить" Click="ButtonClean_Click" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Page>