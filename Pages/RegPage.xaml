<Page x:Class="_222_Busin.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Margin="40">
            <Label Content="Введите логин"/>
            <TextBox x:Name="txtbxLog" Width="260"/>

            <Label Content="Введите пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="passBxFrst" Width="260"/>

            <Label Content="Подтвердите пароль" Margin="0,8,0,0"/>
            <PasswordBox x:Name="passBxScnd" Width="260"/>

            <Label Content="Выберите роль" Margin="0,8,0,0"/>
            <ComboBox x:Name="comboBxRole" Width="260">
                <ComboBoxItem Content="User"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>

            <Label Content="Введите ФИО" Margin="0,8,0,0"/>
            <TextBox x:Name="txtbxFIO" Width="260"/>

            <Button x:Name="regButton" Content="Зарегистрироваться" Width="170" Margin="0,12,0,0" Click="regButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
