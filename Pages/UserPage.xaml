<Page x:Class="_222_Busin.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Busin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Пользователи">
    <Page.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="8">
            <TextBlock Text="Введите ФИО для поиска:" VerticalAlignment="Center"/>
            <TextBox x:Name="fioFilterTextBox" Width="200" Margin="6" TextChanged="fioFilterTextBox_TextChanged"/>
            <TextBlock Text="Сортировка по ФИО:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="sortComboBox" Width="140" Margin="6" SelectionChanged="sortComboBox_SelectionChanged">
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>
            <CheckBox x:Name="onlyAdminCheckBox" Content="Только администраторы" Margin="10,0,0,0" Checked="onlyAdminCheckBox_Checked" Unchecked="onlyAdminCheckBox_Unchecked"/>
            <Button Content="Очистить фильтр" Click="clearFiltersButton_Click_1" Margin="10,0,0,0"/>
        </WrapPanel>

        <ListView x:Name="ListUser" Grid.Row="1" Margin="8">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="6" Margin="6" BorderBrush="Gray" BorderThickness="1" Width="220">
                        <StackPanel>
                            <Image Width="200" Height="120" Stretch="UniformToFill" Source="{Binding Photo, Converter={StaticResource ImagePathConverter}}"/>
                            <TextBlock Text="{Binding FIO}" FontWeight="Bold" TextAlignment="Center" Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding Role}" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
